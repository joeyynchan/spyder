{% extends 'privileged_base.html.jinja' %}

{% block title %}
  <title>Update Profile - SPYDER - social proximity sensing</title>
{% endblock %}

{% block privileged_base_content %}
  <form id="update-profile-panel" class="form-horizontal" role="form" action="/user/update-profile" method="POST">
    <div class="form-group">
      <label for="update-profile-name" class="col-sm-3 control-label">Name</label>
      <div class="col-sm-7">
        <input type="text" class="form-control" name="name" id="update-profile-name" value="{{name if name else ''}}" placeholder="Enter name here">
      </div>
      <label for="update-profile-job" class="col-sm-3 control-label">Occupation</label>
      <div class="col-sm-7">
        <input type="text" class="form-control" name="job" id="update-profile-job" value="{{job if job else ''}}" placeholder="Enter occupation here">
      </div>
      <label for="update-profile-company" class="col-sm-3 control-label">Organization</label>
      <div class="col-sm-7">
        <input type="text" class="form-control" name="company" id="update-profile-company" value="{{company if company else ''}}" placeholder="Enter organization here">
      </div>
      <label for="update-profile-email" class="col-sm-3 control-label">Email</label>
      <div class="col-sm-7">
        <input type="email" class="form-control" name="email" id="update-profile-email" value="{{email if email else ''}}" placeholder="Enter email here">
      </div>
      <label for="update-profile-phone" class="col-sm-3 control-label">Phone</label>
      <div class="col-sm-7">
        <input type="text" class="form-control" name="phone" id="update-profile-phone" value="{{phone if phone else ''}}" placeholder="Enter phone here">
      </div>
      <label for="update-profile-external_link" class="col-sm-3 control-label">External_link</label>
      <div class="col-sm-7">
        <input type="url" class="form-control" name="external_link" id="update-profile-external_link" value="{{external_link if external_link else ''}}" placeholder="Enter external_link here">
      </div>
      <label for="update-profile-gender" class="col-sm-3 control-label">Gender</label>
      <div class="col-sm-7">
        <input type="text" class="form-control" name="gender" id="update-profile-gender" value="{{gender if gender else ''}}" placeholder="Enter gender here">
      </div>
      <label for="update-profile-photo" class="col-sm-3 control-label">Photo</label>
      <div class="col-sm-7">
        <input type="url" class="form-control" name="photo" id="update-profile-photo" value="{{photo if photo else ''}}" placeholder="Enter photo here">
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-9">
        <button type="submit" class="btn btn-primary">Update Profile</button>
        <a class="btn btn-default" href="/" role="button">Cancel</a>
      </div>
    </div>
  </form>
{% endblock %}