{% extends 'base.html.jinja' %}

{% block base_content %}
  <style>
    .navbar {
      padding: 10px;
    }
    body {
      padding-top: 70px;
    }
    .jumbotron {
      padding: 50px;
    }
  </style>

  {% if success_message %}
    <div class="alert alert-success" role="alert">
      {{ success_message }}
    </div>
  {% endif %}

  {% if error_message %}
    <div class="alert alert-danger" role="alert">
      {{ error_message }}
    </div>
  {% endif %}

  <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container">
      <ul class="nav navbar-nav navbar-right">
        <form id="login-panel" class="form-inline" role="form" action="/login" method="post">
          <div class="form-group">
            <label class="sr-only" for="login-username">Username</label>
            <input type="text" name="username" class="form-control" id="login-username" placeholder="Enter username" required>
          </div>
          <div class="form-group">
            <label class="sr-only" for="login-password">Password</label>
            <input type="password" name="password" class="form-control" id="login-password" placeholder="Enter password" required>
          </div>
          <button type="submit" class="btn btn-default">Sign in</button>
        </form>
      </ul>
    </div>
  </nav>
  
  <div class="jumbotron">
    <h1>SPYDER</h1>
    <p>Welcome to Social Networks in the Real World through Proximity Sensing</p>
    <p><a class="btn btn-primary btn-lg" href="#" role="button">Register</a></p>
  </div>

  <script>
    $('#login-panel').submit(function(event) {
      var hashedPassword = hashPassword($('#login-password').val());
      $('#login-password').val(hashedPassword);
    });

    function hashPassword(password) {
      // TODO(gunpiyo): improve hashing function
      return 'pw' + password + 'eiei';
    }
  </script>
{% endblock %}